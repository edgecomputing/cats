                           .Name("ProgramID")
                           .AutoFill(true)
                           .BindTo(new SelectList(Model.Programs, "ProgramID", "Name", Model.ProgramID))
                            .HtmlAttributes(new { style = string.Format("width:{0}px", 200) })
                            .ClientEvents(ev => ev.OnChange("OnComChange"))
                           .Filterable(filtering =>
