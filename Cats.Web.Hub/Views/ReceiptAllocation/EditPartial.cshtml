            </td>
            
                    <td>
                    @Html.LabelFor(model => model.CommodityID, Html.Translate("Commodity")) <span class="required">*</span>
                </td>
            <td>
                @(Html.Telerik().ComboBox()
           .Name("CommodityID")
           .AutoFill(true)
           .BindTo(new SelectList(Model.Commodities, "CommodityID", "Name", Model.CommodityID))
