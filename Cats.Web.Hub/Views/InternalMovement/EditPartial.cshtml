                            .Filterable(filtering => { filtering.FilterMode(AutoCompleteFilterMode.StartsWith); })
                            .HighlightFirstMatch(true)
                            .DataBinding(binding => binding.Ajax().Select("GetStacksForFromStore", "InternalMovement"))
