<script src="@Url.Content("~/Scripts/Cascade.js")" type="text/javascript"></script>

@using (Html.BeginForm("Create","AdminUnit")) {
    @Html.ValidationSummary(true) 
    @Html.HiddenFor(m=>m.SelectedAdminUnitTypeId)
    <div>
        <div class="editor-label">
            @Html.Translate("Name")
        </div>
