@using Cats.Web.Hub.Helpers
@model IEnumerable<Cats.Models.Hub.UserProfile>

<table id="grid" width="100%">
<thead>
    <tr>
        <th></th>
        <th>
            User Name
        </th>
        <th >
            First Name
        </th>
        <th >
            Last Name
        </th>
        <th >
            Grand Father Name
        </th >
        <th>
            Language 
        </th>
        <th >
            Mobile Number
        </th>
        <th >
            Email
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
         @{
              var i = 1;
          }
        @foreach (var item in Model) {
            
            <tr>
                <td>@i</td>
                <td>
                    @Html.DialogFormLink(@item.UserName, Url.Action("Edit/" + item.UserProfileID), "Edit User Account", "list", Url.Action("Update")) 
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GrandFatherName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LanguageCode)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MobileNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.ActionLink("Delete", "Delete", new { id=item.UserProfileID }) |
                    @Html.DialogFormLink("Roles", Url.Action("UserRoles", new { userName = item.UserName }), "User Roles", "ConfigContainer", Url.Action("Update"))
                      |
                    @Html.DialogFormLink("Hubs", Url.Action("UserHubs", new { userName = item.UserName }), "User Hubs", "ConfigContainer", Url.Action("Update"))
                </td>
            </tr>
            i++;
        }
    </tbody>
</table>