                            @RenderSection("Toolbar", required: false)
                            @Html.Partial("_ToolbarCommon")
                        </div>
                    </div>

                </div>
                <div style="clear: both;" class="message-window">@RenderSection("Errors", required: false)@Html.CustomValidationSummary()</div>
