@using Cats.Web.Hub.Helpers
@model Cats.Models.Hubs.Translation

<div>
    @using (Html.BeginForm("Save","Translation")){
        @Html.HiddenFor(model => model.LanguageCode)
        @Html.HiddenFor(model=>model.TranslationID)
        <table class="borderless" width="100%">
            <tr>
                <td style="width: 200px;">
                    @Html.Translate("Phrase")
                </td>
                <td class="accent-box">
                    @Model.Phrase
                </td>
            </tr>
            <tr>
                <td>@Html.Translate("Language")</td>
                <td class="accent-box">@Model.LanguageCode</td>
            </tr>
            <tr>
                <td>
                    @Html.Translate("Translated Text")
                </td>
                <td>
                    @Html.TextAreaFor(model =>model.TranslatedText)
                </td>

            </tr>
            <tr>
                <td></td>
                <td><input type="submit" value="@Html.Translate("Save")" class="t-button" /></td>
            </tr>
        </table>
    }
</div>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.jgeez.min.js")" type="text/javascript"></script>
<script type="text/javascript">
    $(function () {
        var name = $('#TranslatedText');
        name.addClass("amharic");
        name.jGeez();
    });
</script>