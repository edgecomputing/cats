@model Cats.Models.Hubs.Commodity
@using Cats.Web.Hub.Helpers
@{
    ViewBag.Title = Html.Translate("Delete");
}

<h2>@Html.Translate("Delete")</h2>

@if (ViewBag.ERROR != null)
    {
    <div class="ui-state-error ui-corner-all" style="margin:1em; padding:10px;">
        
        <span class="ui-icon ui-icon-alert" style="float: left; margin-right: .3em;"></span>
            @ViewBag.ERROR_MSG
        
    </div>
    }

<h3>@Html.Translate("Are you sure you want to delete this?")</h3>
<fieldset>
    <legend>@Html.Translate("Commodity")</legend>
    @Html.HiddenFor(model => model.CommodityID)
    <div class="display-label">Name</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Name)
    </div>

    <div class="display-label">@Html.Translate("LongName")</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.LongName)
    </div>

    <div class="display-label">@Html.Translate("CommodityType")</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.CommodityType.Name)
    </div>

    <div class="display-label">@Html.Translate("ParentCommodity")</div>
    <div class="display-field">
        @Html.DisplayFor(model => model.Commodity2.Name)
    </div>
</fieldset>
@using (Html.BeginForm())
    {
    <p>
        <input type="submit" value="@Html.Translate("Delete")" /> |
        @Html.ActionLink(@Html.Translate("Back to List"), "Index")
    </p>
}
