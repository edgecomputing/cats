@model Cats.Models.Bid

@{
    ViewBag.Title = "Edit Bid Document";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
@section LeftBar
{
     @Html.Partial("_BidLeftBar")
}
@section Toolbar
{
    <a class="btn toolbar-btn " data-buttontype="btn_save" data-submittedform="frm_edit_bid"></a>
    <a class="btn toolbar-btn " data-buttontype="btn_cancel" href="@Url.Action("Index", "Bid")"></a>
}
<div><h4>Bid Document</h4></div>

    @using (Html.BeginForm("EditBidStatus", "Bid", FormMethod.Post, new { id = "frm_edit_bid" }))
    {
         @Html.ValidationSummary(true)
        <div class="form-horizontal ">
        <fieldset>
            <legend> Edit Bid </legend>
            @Html.HiddenFor(model=>model.BidID)
              @Html.HiddenFor(model=>model.StatusID)
            <div class="control-group">
                <div class="control-label">
                    @Html.LabelFor(model => model.TransportBidPlanID, "Bid Plan")
                </div>
                <div class="controls">
                    @Html.DropDownList("TransportBidPlanID",String.Empty)
                    @Html.ValidationMessageFor(model => model.TransportBidPlanID)
                </div>
            </div>
            
            <div class="control-group">
                <div class="control-label">
                    @Html.LabelFor(model => model.RegionID, "Region")
                </div>
                <div class="controls">
                    @Html.DropDownList("RegionID",String.Empty)
                    @Html.ValidationMessageFor(model => model.RegionID)
                </div>
            </div>

            <div class="control-group" >
                <div class="control-label">
                    @Html.LabelFor(model => model.BidNumber, "Bid Number")
                </div>
                <div class="controls">
                @Html.TextBoxFor(model=>model.BidNumber)
                @Html.ValidationMessageFor(model => model.BidNumber)
                 </div>
            </div>
            <div class="control-group">
                <div class="control-label">
                    @Html.LabelFor(model => model.StartDate, "Start Date",new {@class="cats-date-pref"})
                </div>
                <div class="controls">
                   @* <input class="cats-datepicker" type="text" id="start" name="start" value="@Model.StartDate"/>*@
                    @Html.TextBoxFor(model=>model.StartDate,new {@class="cats-datepicker2"})
                    @Html.ValidationMessageFor(model => model.StartDate)
                     <div class="input-append bootstrap-timepicker">
                        <span class="add-on">Time</span>
                        @Html.TextBoxFor(model=>model.startTime,new { @class = "input-small", id="startTime" })
                       
                    </div>
                </div>

            </div>
            <div class="control-group">
                <div class="control-label">
                     @Html.LabelFor(model => model.EndDate, "End Date",new {@class="cats-date-pref"})
                </div>
               
                <div class="controls">
                     @*<input class="cats-datepicker" type="text" id="end" name="end" value="@Model.EndDate" />*@
                    @Html.TextBoxFor(model=>model.EndDate,new {@class="cats-datepicker2"})
                    @Html.ValidationMessageFor(model => model.EndDate)
                    <div class="input-prepend " style="margin-right: 2px">
                        <span class="add-on">Time</span>
                        @Html.TextBoxFor(m=>m.endTime, new { @class = "input-small", id="endTime" })
                    </div>
                
            </div>
            <div class="control-group">
                <div class="control-label">
                    @Html.LabelFor(model => model.OpeningDate, "Opening Date",new {@class="cats-date-pref"})
                </div>
                
                <div class="controls">
                    @* <input class="cats-datepicker" type="text" id="open" name="open" value="@Model.OpeningDate"/>*@
                    @Html.TextBoxFor(model=>model.OpeningDate,new {@class="cats-datepicker2"})
                    @Html.ValidationMessageFor(model => model.OpeningDate)
                    <div class="input-prepend " style="margin-right: 2px">
                        <span class="add-on">Time</span>
                        @Html.TextBoxFor(m => m.BidOpeningTime, new { @class = "input-small" })
             
                    </div>
                </div>
               
            </div>
            @*<div class="control-group">
                <div class="control-label">
                      @Html.LabelFor(model => model.StatusID, "Status")
                </div>
              
                <div class="controls"> @Html.DropDownList("StatusID",String.Empty)
                @Html.ValidationMessageFor(model => model.StatusID)</div>
               
            </div>   *@  
        </fieldset>
            </div>
    }
<link href="~/Scripts/timepicker/jquery.timepicker.css" rel="stylesheet"/>
<script src="~/Scripts/timepicker/jquery.timepicker.js"></script>
<script src="~/Scripts/timepicker/jquery.timepicker.min.js"></script>     



<script>
   
    
    $('#startTime').timepicker({
        'minTime': '8:00am',
        'maxTime': '1:30pm',
        'showDuration': true
    });
    
    $('#endTime').timepicker({
        'minTime': '8:00am',
        'maxTime': '1:30pm',
        'showDuration': true
    });
    
    $('#BidOpeningTime').timepicker({
        'minTime': '8:00am',
        'maxTime': '1:30pm',
        'showDuration': true
    });
    
   
</script>