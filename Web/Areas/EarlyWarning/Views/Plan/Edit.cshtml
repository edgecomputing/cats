
@using LanguageHelpers.Localization
@model Cats.Models.Plan

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_MainLayout.cshtml";  
}
@section LeftBar
{
   
    
   
}

@section Toolbar
{   
    <a class="btn toolbar-btn " data-buttontype="btn_save" data-submittedform="frm_edit_plan"></a>
    <a class="btn toolbar-btn " data-buttontype="btn_cancel" href="@Url.Action("Index", "Plan")" title="save"></a>
}
<div>
    <h4>Edit Plan</h4>
</div>
    @using (Html.BeginForm("Edit", "Plan", FormMethod.Post, new { id = "frm_edit_plan" }))

    {
        @Html.HiddenFor(m=>m.PlanID)
        @Html.HiddenFor(m=>m.Status)
        <div class="well form-horizontal">
            <div class="control-group">
                <div class="control-label">
                    @Html.LabelFor(m => m.PlanName,Translator.Translate("Plan Name"))
                </div>
                <div class="controls">
                    @Html.TextBoxFor(m=>m.PlanName)
                    @Html.ValidationMessageFor(m=>m.PlanName)
                </div>
            </div>
            <div class="control-group">
                <div class="control-label">
                    @Html.Label(Translator.Translate("Program"))
                </div>
                <div class="controls">
                    @Html.DropDownList("ProgramID",String.Empty)
                    @Html.ValidationMessageFor(m=>m.ProgramID)
                </div>
            </div>

             <div class="control-group">
                <div class="control-label">
                    @Html.LabelFor(m => m.StartDate,Translator.Translate("From Date"))
                </div>
                <div class="controls">
                    @* <input class="cats-datepicker" type="text" id="create" name="create" />*@
                    @Html.TextBoxFor(m=>m.StartDate,new {@class="cats-datepicker2"})
                    @Html.ValidationMessageFor(m => m.StartDate)
                </div>
        
            </div>
            <div class="control-group">
                <div class="control-label">
                    @Html.LabelFor(m => m.EndDate,Translator.Translate("TO Date"))
                </div>
                <div class="controls">
                    @* <input class="cats-datepicker" type="text" id="create" name="create" />*@
                    @Html.TextBoxFor(m=>m.EndDate,new {@class="cats-datepicker2"})
                    @Html.ValidationMessageFor(m => m.EndDate)
                </div>
        
            </div>
            <div class="control-group">
                <div class="control-label">
                    @Html.LabelFor(m => m.Remark)
                </div>
                <div class="controls">
                    @* <input class="cats-datepicker" type="text" id="create" name="create" />*@
                    @Html.TextAreaFor(m=>m.Remark)
                    @Html.ValidationMessageFor(m => m.Remark)
                </div>
        
            </div>
        </div>
    }



