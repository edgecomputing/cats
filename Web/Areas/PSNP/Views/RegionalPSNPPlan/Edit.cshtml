@model Cats.Models.RegionalPSNPPlan
@using LanguageHelpers.Localization

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
@section LeftBar
{
    @Html.Partial("_PSNPLeftBar");
}
@section Toolbar
{
    <a class="btn toolbar-btn " data-buttontype="btn_save" data-submittedform="frm_edit_psnp"></a>
    <a class="btn toolbar-btn " data-buttontype="btn_cancel" href="@Url.Action("Index", "RegionalPSNPPlan")"></a>
}

<h2>@Translator.Translate("Edit")</h2>
<div class="form-horizontal">
@using (Html.BeginForm("Edit", "RegionalPSNPPlan", FormMethod.Post, new { id = "frm_edit_psnp" }))
{
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>@Translator.Translate("Regional PSNP Plan")</legend>

        @Html.HiddenFor(model => model.RegionalPSNPPlanID)

        <div class="control-group">
            @Html.LabelFor(model => model.Year, new { @class = "control-label"})
            <div class="controls">
                 @Html.TextBoxFor(model => model.Year, new { @class = "input-xlarge", @placeholder = "Year" })    
                 @Html.ValidationMessageFor(model => model.Year)
            </div>
        </div>

        <div class="control-group">
            @Html.LabelFor(model => model.Region, new { @class = "control-label"})
            <div class="controls">
                
                @Html.DropDownList("RegionID")  
                 @Html.ValidationMessageFor(model => model.Region)
            </div>
        </div>

        <div class="control-group">
            @Html.LabelFor(model => model.Ration, new { @class = "control-label"})
            <div class="controls">
                   @Html.DropDownList("RationID")     
                    
                 @Html.ValidationMessageFor(model => model.Ration)
            </div>
        </div>

       <div class="control-group">
            @Html.LabelFor(model => model.Duration, new { @class = "control-label"})
            <div class="controls">
                 @Html.TextBoxFor(model => model.Duration, new { @class = "input-xlarge", @placeholder = "Duration" })    
                 @Html.ValidationMessageFor(model => model.Duration)
            </div>
        </div>     

        <!--

        <p>
            
            <input type="submit" value="@Translator.Translate("Save")" class="btn btn-info"/>
            <a href="@Url.Action("Index", "RegionalPSNPPlan")" class="btn btn-danger">@Translator.Translate("Back to List") </a> 
        </p>
            -->
    </fieldset>
}
</div>
